<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8dp"
    android:layout_marginTop="@dimen/_16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130dp"
            android:contentDescription="@string/categoryCardDescription"
            android:scaleType="centerCrop"
            tools:src="@drawable/bcg_default" />

        <TextView
            android:id="@+id/tvCategoryHeader"
            style="@style/StyleCategoryCardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            tools:text="заголовок" />

        <TextView
            android:id="@+id/tvCategoryDescription"
            style="@style/StyleCategoryCardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"
            tools:text="Описание" />

    </LinearLayout>
</androidx.cardview.widget.CardView>