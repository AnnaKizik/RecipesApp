<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_8dp"
    app:cardElevation="@dimen/_0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvIngredientName"
            style="@style/StyleIngredients"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            tools:text="название инг." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIngredientQuantity"
                style="@style/StyleIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="кол-во инг." />

            <TextView
                android:layout_width="@dimen/_4dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvIngredientUnitOfMeasure"
                style="@style/StyleIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ед.изм" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>